{
  "name": "@repo/indexer",
  "module": "src/index.ts",
  "type": "module",
  "scripts": {
    "start": "bun src/index.js",
    "dev": "bun --hot src/index.ts | pino-pretty",
    "services:start": "docker compose up -d",
    "services:stop": "docker compose down",
    "migrate:create": "bun ./src/database/migrator create",
    "migrate:types": "kanel --config=.kanelrc.cjs",
    "migrate:up": "bun ./src/database/migrator latest",
    "migrate:down": "bun ./src/database/migrator down",
    "migrate": "bun run migrate:up && bun run migrate:types",
    "test": "bun test"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.5.3",
    "@types/bun": "^1.0.5",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.11.0",
    "kanel": "^3.8.7",
    "kanel-kysely": "^0.3.3",
    "pino-pretty": "^10.3.1"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@alephium/web3": "^0.29.2",
    "hono": "^4.0.1",
    "ioredis": "^5.3.2",
    "kysely": "^0.27.2",
    "node-cron": "^3.0.3",
    "pg": "^8.11.3",
    "pino": "^8.18.0",
    "redlock": "^5.0.0-beta.2",
    "zx": "^7.2.3"
  }
}
